<script type="text/javascript" src="/js/jquery-1.12.3.min.js"></script>
<script type="text/javascript" src="/js/bootstrap.min.js"></script>
<script type="text/javascript" src="js/PageNav.js"></script>
<script>
    //点击添加客户
    $("#btns").click(function () {
        $.post("/caradd", {
            sid: parseInt($("input[name=sid]").val()),
            name: $("input[name=name]").val(),
            suo: $(".option:selected").val(),
            price: $("input[name=price]").val(),
            danwei: $("input[name=danwei]").val(),
            tai: $("input[name=tai]").val()
        }, function (data) {
            if (data.result == 1) {
                alert("提交成功！");
                window.location.href = '/car';
                $("input[type=text]").val("");
            } else if (data.result == -1) {
                alert("提交失败，被占用！");
            } else if (data.result == -2) {
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    });
    //更改
    $("#update").click(function () {
        if ($("input[name=sid]:checked").length==0){
            var This = $("input[name=timu]:checked").parents().children();
            console.log($(This).eq(2).html());
            var sid = $(This).eq(2).html();
            $.get("/car/"+sid,function (data) {
                if (data.result==-1){
                    alert("查无此人")
                }else{
                    $("input[name=sid]").val(data.result.sid);
                    $("input[name=names]").val(data.result.name);
                    $("input[name=suos]").val(data.result.suo);
                    $("input[name=prices]").val(data.result.price);
                    $("input[name=danweis]").val(data.result.danwei);
                    $("input[name=tais]").val(data.result.tai);
                }
            })
        }
    })
    //修改完毕
    $("#ok").click(function () {
        var  sid = parseInt($("input[name=sid]").val());
        $.post("/car/" + sid,{
            names: $("input[name=names]").val(),
            suos: $(".options:selected").val(),
            prices: $("input[name=prices]").val(),
            danweis: $("input[name=danweis]").val(),
            tais: $("input[name=tais]").val()
        },function(data){
            if(data.result == 1){
                alert("修改成功！");
                window.location = "/car";
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    })
    //删除
    $("#tbody").delegate(".delbtn", "click", function () {
        $(".shan").click(function () {
            $(this).modal('hide');
            var sid = $("input[name=timu]:checked").attr("data-sid");
            var $this = $(this);
            $.ajax({
                url: "/deletes/" + sid,
                type: "delete",
                success: function (data) {
                    if (data.result == 1) {
                        alert("删除成功");
                        $this.parents("tr").remove();
                        window.location.href = '/car'
                    } else {
                        alert("服务器错误！");
                    }
                }
            });
        })
    })

    $.get("/carall?page=1", function (data) {
        new PageNav({
            boxid: "pagenavbox",
            page: 1,
            pageAmount: data.pageAmount,
            change: function (pagenumber) {
                gotopage(pagenumber);
            }
        });
        gotopage(1);
    });
    function gotopage(pagenumber) {
        $("#tbody").empty();
        $.get("/carall?page=" + pagenumber, function (data) {
            console.log(data.results);
            $.each(data.results, function (i, n) {
                $tr = $("<tr class='shows'></tr>");
                $("<td><input type='radio' class='delbtn' name='timu' data-sid='" + n.sid + "'/></td>").appendTo($tr);
                $("<td></td>").html(n.sid).appendTo($tr);
                $("<td></td>").html(n.name).appendTo($tr);
                $("<td></td>").html(n.suo).appendTo($tr);
                $("<td></td>").html(n.price).appendTo($tr);
                $("<td></td>").html(n.danwei).appendTo($tr);
                $("<td></td>").html(n.tai).appendTo($tr);
                //上树
                $tr.appendTo($("#tbody"));
            });
        });
    }

    $("#tuichu").click(function () {
        $.get("/tuichu",function (data) {
            alert("退出成功");
            window.location="/"
        })
    })
    $.get("/leiall",function (data) {
        $.each(data.results,function (i,n) {
            $("<option class='option'></option>").html(n.name).appendTo($("#select"));
        })
    })
    $.get("/leiall",function (data) {
        $.each(data.results,function (i,n) {
            $("<option class='options'></option>").html(n.name).appendTo($("#selects"));
        })
    })
</script>
</body>
