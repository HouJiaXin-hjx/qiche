<div class="white"></div>

    <div class="container">
        <div class="col-lg-3 nei">
            <h1>欢迎登录</h1>
            <form action="">
                <div class="form-group">
                    <label for="yonghuming">用户名</label>
                    <input type="text" class="form-control" name="yonghuming" id="yonghuming">
                </div>
                <div class="form-group">
                    <label for="mima">密码</label>
                    <input type="password" class="form-control" name="mima" id="mima">
                </div>
                <button type="button" class="btn btn-success" id="denglu">登录</button>
            </form>
        </div>
    </div>


<script src="js/jquery-1.12.3.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script>
    $("#denglu").click(function () {
        var str = $("form").serialize();
        $.post("/checklogin",str,function (data) {
            if(data.result==1){
                alert("成功");
                window.location="/xianshi";
            }else if(data.result==-1){
                alert("用户名不存在");
                window.location="/reg"
            }else if(data.result==-2){
                alert("用户名存在，密码不正确");
            }
        })
    })
</script>
</body>
